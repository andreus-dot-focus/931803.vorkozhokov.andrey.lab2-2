@model WebApplication2.Models.CalculateViewModel
@{
    ViewBag.Title = "Hello Forms";
}

<h2>ModelBindingInSeparateModel</h2>

<form asp-action="ModelBindingInSeparateModel">
    <div class="row">
        <div class="form-group col-12">
            <input asp-for="Number1" class="form-control" value="@Model.Number1" />
            <span asp-validation-for="Number1"></span>
        </div>
        <div class="form-group col-12" style="width:70px;">
            <select asp-for="Operation" id="selecteditems" class="form-control">
                <option selected>+</option>
                <option>-</option>
                <option>*</option>
                <option>/</option>
            </select>
        </div>
        <div class="form-group col-12">
            <input asp-for="Number2" class="form-control" value="@Model.Number2" />
            <span asp-validation-for="Number2"></span>
        </div>
        <button type="submit" class="btn btn-primary col-12" style="background-color:gray; border-color:gray;">submit</button>
        <div style="font-size : 20px" class="form-group col-12">
            @if (Model.ResultNumber != null)
            {
                <h2>Result</h2>
                <p>@Model.Number1 @Model.Operation @Model.Number2 = @Model.ResultNumber</p>
            }
        </div>
    </div>
</form>